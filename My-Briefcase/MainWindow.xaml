        xmlns:local="clr-namespace:My_Briefcase"
        mc:Ignorable="d"
        Title="My-Briefcase" Height="450" Width="800" WindowStyle="None"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
